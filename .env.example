M3U_ENDPOINT="http://line.l-ion.xyz/get.php?username=CanaL-IPTV&password=63KQ5913&type=m3u&output=rtmp"

# Xtream Codes API Configuration (REQUIRED)
XTREAM_BASE_URL="http://line.l-ion.xyz"
