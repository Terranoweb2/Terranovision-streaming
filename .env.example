XTREAM_PASSWORD="63KQ5913"

# Database
DATABASE_URL="postgresql://terranovision:password@localhost:5432/terranovision?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-random-string-here-min-32-chars"

# Services URLs
INGEST_SERVICE_URL="http://localhost:4000"
STREAM_GATEWAY_URL="http://localhost:4001"

# Optional: CDN Base URL for HLS streaming
# CDN_BASE_URL="https://cdn.terranovision.com"

# Optional: Redis for caching
# REDIS_URL="redis://localhost:6379"

# Stream Gateway Configuration
FFMPEG_PATH="/usr/bin/ffmpeg"
HLS_SEGMENT_DURATION="4"
HLS_PLAYLIST_SIZE="5"
MAX_CONCURRENT_TRANSCODES="10"

# Server Configuration
NODE_ENV="development"
PORT_WEB="3000"
PORT_INGEST="4000"
PORT_GATEWAY="4001"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="100"

# Parental Control
DEFAULT_PARENTAL_PIN="1234"

# Email (for magic link auth - optional)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="noreply@terranovision.com"
# SMTP_PASSWORD="your-smtp-password"
# SMTP_FROM="TerranoVision <noreply@terranovision.com>"

# SMS Provider (for OTP - optional)
# SMS_PROVIDER="twilio"
# TWILIO_ACCOUNT_SID="your-account-sid"
# TWILIO_AUTH_TOKEN="your-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# Payment APIs (Wave, Mobile Money)
