# Dockerfile final pour Render.com (sans workspace)
FROM node:20-alpine

# Install ffmpeg
RUN apk add --no-cache ffmpeg

WORKDIR /app

# Copier le package.json STANDALONE (sans workspace)
COPY package.render.json package.json

# Install dependencies
RUN npm install

# Copy source
COPY src ./src
COPY tsconfig.json ./

# Build
RUN npm run build

# Clean
RUN npm prune --production

# Create HLS directory
RUN mkdir -p /app/hls

EXPOSE 4001

CMD ["node", "dist/index.js"]
