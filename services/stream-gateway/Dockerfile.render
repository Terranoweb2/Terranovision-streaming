# Dockerfile simplifi√© pour Render.com
FROM node:20-alpine

# Install ffmpeg
RUN apk add --no-cache ffmpeg

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src ./src
COPY tsconfig.json ./

# Build TypeScript
RUN npm run build

# Create HLS directory
RUN mkdir -p /app/hls

# Expose port (Render utilise la variable PORT)
EXPOSE $PORT

# Start application
CMD ["node", "dist/index.js"]
